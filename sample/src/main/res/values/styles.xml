<resources>

    <!-- Launch Screen -->
    <style name="AppThemeLauncher" parent="AppThemeLightBase">
        <item name="colorPrimaryDark">#60000000</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>


    <style name="AppThemeDarkBase" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="AppThemeLightBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="AppThemeDayNightBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="AppThemeLight" parent="AppThemeDayNightBase" />

    <style name="AppThemeDark" parent="AppThemeDarkBase" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeDark2" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">#ff00acc1</item>
        <item name="colorPrimaryDark">#ff0097a7</item>
        <item name="colorAccent">#ffd81b60</item>

        <item name="colorControlNormal">#00acc1</item>
        <item name="colorControlHighlight">#ffd81b60</item>
        <item name="colorControlActivated">#ffd81b60</item>

        <item name="colorButtonNormal">#00acc1</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Base.Theme.DesignDemoLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>


